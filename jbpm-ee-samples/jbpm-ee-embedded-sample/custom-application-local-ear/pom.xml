	<build>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				
				<configuration>
					<packagingExcludes>WEB-INF/lib/jms-1.1.jar</packagingExcludes>
					<skinnyWars>true</skinnyWars>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<finalName>custom-application-local</finalName>
					<modules>
						<webModule>
							<groupId>org.jbpm.jbpm-ee</groupId>
							<artifactId>jbpm-ee-services</artifactId>
							<contextRoot>/jbpm-ee-services</contextRoot>
							<bundleFileName>jbpm-ee-services.war</bundleFileName>							
						</webModule>
						<webModule>
							<groupId>org.jbpm.jbpm-ee</groupId>
							<artifactId>custom-application-local</artifactId>
							<contextRoot>/custom-application-local</contextRoot>
							<bundleFileName>custom-application-local.war</bundleFileName>
						</webModule>
					</modules>
				</configuration>

			</plugin>
		</plugins>
	</build>

